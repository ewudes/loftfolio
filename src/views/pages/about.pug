extends ../main.layout.pug

block variables
	- var title = 'Обо мне'

block scripts
	script(src='about.bundle.js')

block content
	section.hero
		.hero-row
			.hero__links
				ul.socials.socials__hero
					li.socials__link
						a(class='socials__link', href='#')
							+icon('vk','socials__link-pic socials__link-pic_vk')
					li.socials__link
						a(class='socials__link', href='#')
							+icon('github','socials__link-pic socials__link-pic_gh')
					li.socials__link
						a(class='socials__link', href='#')
							+icon('in','socials__link-pic socials__link-pic_in')

			a(href="").hamburger.hero__menu
				+icon('hamburger','hamburger-pic')

		.hero-row
			.hero__title
				.section-title

				.user.hero__user
					.user__pic
						img.user__pic-img
					.user__description
						.user__name Алексей Гунчин
						.user__info Личный сайт разработчика
		.hero-row
			a(href="").down-btn.hero__down-btns
				+icon('arrow_down','hero__down-btn-pic')

	secrion.about
		.about__left
			.about__triangle
				svg(viewBox="0 80 100 20" preserveAspectRatio="none").triangle.triangle_fill_white
					polygon(points="0,80 0,100 100,100")
			.about__left-title
				h2.block-title Обо мне
			.about__left-content
				.user-description
					.user-description__image
						img.user-description__avatar
					.user-description__data
						.user-description__title
							.block-subtitle Кто я
						.user-description__text.text-content
							p Я веб разработчик из Новосибирска. Мне 27 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
							p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
		.about__right
			.about__triangle
				svg(viewBox="0 80 100 20" preserveAspectRatio="none").triangle.triangle_fill_beige
					polygon(points="0,100 100,100 100,80")
			.about__right-title
				.block-subtitle Чем я могу быть вам полезен
			.about__right-description.text-content
				p Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
			.about__right-content
				-
					var skills = [
					['Frontend', [['HTML5', 30], ['CSS3', 50], ['JavaScript & jQuery', 70]]],
					['Backend', [['PHP', 30], ['mySQL', 50], ['Node.js & npm', 70], ['Mongo.db','20']]],
					['WorkFlow', [['Git', 30], ['Gulp', 50], ['Bower', 70]]]
					]
				ul.skills-list
					each skillsrow in skills
						li.skills-list__item.skills-row
							.skills-row__title #{skillsrow[0]}
							ul.skills-row__list
								each skill in skillsrow[1]
									li.skills-row__item
										figure.skill
											svg(viewBox="0 0 90 90" preserveAspectRatio="none").skill__figure
												circle(cx="45" cy="45" r="35").skill__circle.skill__circle_under
												circle(cx="45" cy="45" r="35").skill__circle.skill__circle_above
											.skill__title #{skill[0]}

	section.map
		.google-map
		.map__data
			.contacts
				h2.contacts__title
					.block-subtitle Контакты
				address.contacts__data
					ul.contacts__list
						-
							var contacts = [
								['skype', 'skype_kdn'],
								['envelope', 'astahov@gmail.com'],
								['phone', '+7(931)200-93-24'],
								['map_marker', 'г.Новосибирск, ул. Инская, д. 5']
							]
						each item in contacts
							li.contacts__item.contacts-row
								.contacts-row.contacts__icon
									+icon(item[0], 'contacts__icon-img')
								.contacts-row.contacts__title #{item[1]}

	footer.footer.footer-about
		.footer__row
			.footer__col
				nav.menu
					ul.menu__list
						each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
							li.menu__item
								a(href="").menu__link #{item}

			.footer__col.footer__col_justify_end
				ul.socials
					li.socials__link
						a(class='socials__link socials__link_round', href='#')
							+icon('vk','socials__link-pic socials__link-pic_round socials__link-pic_vk')
					li.socials__link
						a(class='socials__link socials__link_round', href='#')
							+icon('github','socials__link-pic socials__link-pic_round socials__link-pic_gh')
					li.socials__link
						a(class='socials__link socials__link_round', href='#')
							+icon('in','socials__link-pic socials__link-pic_round socials__link-pic_in')

		.footer__row
			.footer__col
				p Я веб-разработчик из Новосибирска, и этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
			.footer__col.footer__col_justify_end
				p &copy Владимир Астахов | создано с любовью в LoftSchool | 2016

